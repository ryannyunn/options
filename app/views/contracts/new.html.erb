<div class="contracts-new">
  <div class="container-fluid animate-fade-in-500">
    <div class="row">
      <div class="col-sm-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <div class="page-title">
              <h3>New Contract</h3>
            </div>
          </div>

          <div class="panel-body">
            <%= form_for(@contract, html: { class: 'form-horizontal' }) do |f| %>
              <%= f.form_group :amount do %>
                <%= f.label :amount, class: 'col-xs-1 col-sm-2 col-md-2 control-label' %>
                <div class="col-sm-10">
                  <%= f.text_field :amount, autofocus: true, class: 'form-control' %>
                </div>
              <% end %>

              <%= f.form_group :amount do %>
                <%= f.label :amount, class: 'col-xs-1 col-sm-2 col-md-2 control-label' %>
                <div class="col-sm-10">
                  <%= f.text_field :amount, autofocus: true, class: 'form-control' %>
                </div>
              <% end %>

              <%= f.form_group :end_time do %>
                <%= f.label :end_time, class: 'col-xs-1 col-sm-2 col-md-2 control-label' %>
                <div class="col-sm-10">
                  <%= f.datetime_select :end_time, default: 1.day.from_now %>
                </div>
              <% end %>

              <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <%= f.submit class: 'btn btn-primary' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
