    <%= link_to 'OptionsContract', root_path %>
  </div>
  <div class="navbar-text pull-right">

    <% if user_signed_in? %>
      <%= fa_icon_tag "user" %> Welcome, <strong><%= current_user.fullname %></strong>
      <span class="divider">|</span>
